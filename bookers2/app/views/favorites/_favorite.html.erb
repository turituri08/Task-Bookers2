<% if book.favorited_by?(current_user) %>
    <%= link_to book_favorites_path(book),'data-turbolinks': false, method: :delete, class: "favorite-color", remote: true do %>
      ♥<%= book.favorites.count %>
    <% end %>
<% else %>
    <%= link_to book_favorites_path(book),'data-turbolinks': false, method: :post, remote: true do %>
      ♡<%= book.favorites.count %>
    <% end %>
<% end %>