<div class="container">
  <h2><strong><%= @user.name %>さんとのチャット</strong></h2>
    <% if @messages.present? %>
      <% @messages.each do |m| %>
        <strong><%= m.content %></strong>
        <small>by <strong><a href="/users/<%= m.user_id %>"><%= m.user.name %>さん</a></strong></small>
        <hr>
      <% end %>
    <% else %>
      <h4 class="text-center">No messages</he>
    <% end %>
  
    <%= form_for @message do |f| %>
      <%= f.text_area :content, :placeholder => "メッセージを入力して下さい", class: "form-control" %>
      <%= f.hidden_field :room_id, :value => @room.id %>
      <br>
      <%= f.submit "投稿する", class: "mt-3" %>
    <% end %>
</div>