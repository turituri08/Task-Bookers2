<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "layouts/side_bar", user: @user, book: @booknew %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2 class="mt-3">Book detail</h2>
      <table class="table">
        <tr>
          <tbody>
            <td class="text-center"><%= link_to user_path(@user) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 90, 90, fallback: "no_image.jpg" %></br>
            <%= @user.name %></td><% end %> <!-- book変数のuser_idに関連付けられているuserモデルのnameカラムを表示します -->
            <td><%= link_to book_path(@book) do %><%= @book.title %><% end %></td>
            <td><%= @book.body %></td>
            <td><%= render"favorites/favorite", book: @book %></td>
            <% if @user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger" %></td>
            <% end %>
          </tbody>
        </tr>
        <tbody>
          <% @book.book_comments.each do |book_comment| %>
          <tr>
            <td><%= attachment_image_tag book_comment.user, :profile_image, :fill, 90, 90, fallback: "no_image.jpg" %></br>
            <%= book_comment.user.name %></td>
            <td><%= book_comment.comment %></td>
            <% if book_comment.user == current_user %>
            <div class="comment-delete">
              <td><%= link_to "Destroy", book_book_comments_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger" %></td>
            </div>
            <% end %>
          </tr>
          <% end %>
        </tbody>

      </table>
        <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
          <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに", class: "form-control" %></br>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>