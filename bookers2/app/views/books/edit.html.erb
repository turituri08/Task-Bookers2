<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1 class="mt-3">Editing Book</h1>

      <% if @book.errors.any? %>
        <div class="error_messages_color">
         <h2><%= @book.errors.count %>error prohibited this obj from being saved:</h2>
         <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
         <% end %>
        </div>
       <% end %>

      <%= form_with model:@book, local: true do |f| %>
        <h6>Title</h6>
        <%= f.text_field :title, class: "form-control mb-2" %>
        <h6>Opinion</h6>
        <%= f.text_area :body, class: "form-control" %></br>
        <%= f.submit 'Update Book', class: "btn btn-success mb-3" %>
      <% end %>

      <%= link_to "Show", book_path(@book) %>
       |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>